<div class="blog-archive">
  <div class="container">

    <div class="title">
      <h2>Purple Light Blog</h2>
      <%= tag :hr, class:'small' %>
    </div>

    <!-- main column -->
    <div class="main-column">

      <!-- standard post format -->
      <div class="blog-item">
        <div class="media">
          <%= link_to image_tag('http://placehold.it/800x600'), '#', class:'featured-image' %>
        </div>

        <div class="blog-teaser">
          <h4 class="post-title"><%= link_to Faker::Book.title, 'javascript:void()' %></h4>

          <div class="meta">
            by <span class="author"><%= link_to 'admin', '' %></span>
            on <span class="date"><%= link_to Faker::Date.backward(23) %></span>
          </div>

          <p class="excerpt">
            <%= Faker::Lorem.paragraph(2) %>
          </p>

          <%= link_to 'Read more', 'javascript:void()', class:'read-more' %>
        </div>
      </div>

      <div class="blog-item">
        <div class="media">
          <%= link_to image_tag('http://placehold.it/800x600'), '#', class:'featured-image' %>
        </div>

        <div class="blog-teaser">
          <h4 class="post-title"><%= link_to Faker::Book.title, 'javascript:void()' %></h4>

          <div class="meta">
            by <span class="author"><%= link_to 'admin', '' %></span>
            on <span class="date"><%= link_to Faker::Date.backward(23) %></span>
          </div>

          <p class="excerpt">
            <%= Faker::Lorem.paragraph(2) %>
          </p>

          <%= link_to 'Read more', 'javascript:void()', class:'read-more' %>
        </div>
      </div>

      <div class="blog-item">
        <div class="media">
          <%= link_to image_tag('http://placehold.it/800x600'), '#', class:'featured-image' %>
        </div>

        <div class="blog-teaser">
          <h4 class="post-title"><%= link_to Faker::Book.title, 'javascript:void()' %></h4>

          <div class="meta">
            by <span class="author"><%= link_to 'admin', '' %></span>
            on <span class="date"><%= link_to Faker::Date.backward(23) %></span>
          </div>

          <p class="excerpt">
            <%= Faker::Lorem.paragraph(2) %>
          </p>

          <%= link_to 'Read more', 'javascript:void()', class:'read-more' %>
        </div>
      </div>

      <!-- pagination -->
      <div class="pagination">
        <ul>
          <li class="page-prev"><a href="javascript:void(0)">Prev</a></li>
          <li>
            <ul>
              <li class="active"><a href="javascript:void(0)">1</a></li>
              <li><a href="javascript:void(0)">2</a></li>
              <li><a href="javascript:void(0)">3</a></li>
            </ul>
          </li>
          <li class="page-next"><a href="javascript:void(0)">Next</a></li>
        </ul>
      </div>

    </div>

    <aside class="sidebar">
      <!-- submenu widget -->

      <div class="widget-wrapper">
        <div class="widget-title">
          <h4>Categories</h4>
        </div>

        <ul class="blog-categories">
          <%= content_tag :li, link_to('News', 'javascript:void(0)') %>
          <%= content_tag :li, link_to('Blog', 'javascript:void(0)') %>
          <%= content_tag :li, link_to('Member Stories', 'javascript:void(0)') %>
          <%= content_tag :li, link_to('Get Involved', 'javascript:void(0)') %>
        </ul>
      </div>

      <!-- search widget -->

      <div class="widget-wrapper">
        <div class="widget-title">
          <h4>Search</h4>
        </div>

        <form>
          <input class="search-widget" type="text" name="search" id="search" placeholder="Type query and hit enter...">
        </form>
      </div>

      <!-- tags widget -->

      <div class="widget-wrapper">
        <div class="widget-title">
          <h4>Hot Topics</h4>
        </div>

        <div class="blog-tags">
          <%= content_tag :span, link_to('Hot Topic 1', '#') %>
          <%= content_tag :span, link_to('Hot Topic 2', '#') %>
          <%= content_tag :span, link_to('Hot Topic 3', '#') %>
          <%= content_tag :span, link_to('Hot Topic 4', '#') %>
          <%= content_tag :span, link_to('Hot Topic 5', '#') %>
          <%= content_tag :span, link_to('Hot Topic 6', '#') %>
          <%= content_tag :span, link_to('Hot Topic 7', '#') %>
          <%= content_tag :span, link_to('Hot Topic 8', '#') %>
        </div>
      </div>

    </aside>

  </div>
</div>